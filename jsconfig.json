{
  "compilerOptions": {
    "module": "es6",
    "target": "es6",
    "baseUrl": "./src",
    "moduleResolution": "node",
    "checkJs": true,
    "jsx": "react"
  },
  "inputs": {
    "include": [
      "src/**/*.js",
      "src/**/*.jsx"
    ],
    "exclude": [
      "node_modules",
      "**/node_modules",
      "dist"
    ]
  }
}
